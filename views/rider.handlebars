
<main class='content'>
    <h2 class='header'>
        Looking for Drivers
    </h2>

    <aside class="filter-container">

      <h2>Filters</h2>

      <div class="filter-input-container">
        <label for="filter-start" class="filter-input-label">Start Location</label>
        <div class="filter-input-element">
          <input type="text" name="filter-start" id="filter-start" class="filter-input">
        </div>
      </div>

      <div class="filter-input-container">
        <label for="filter-end" class="filter-input-label">Destination Location</label>
        <div class="filter-input-element">
          <input type="text" name="filter-end" id="filter-end" class="filter-input">
        </div>
      </div>

      <div class="filter-input-container">
        <label for="filter-date" class="filter-input-label">Date (day of month)</label>
        <div class="filter-input-element">
          <input type="text" name="filter-date" id="filter-date" class="filter-input">
        </div>
      </div>

      <button id="filter-update-button" class="action-button">Update</button>

    </aside>


    <h2 class="header">Posts</h2>
      <section id="posts-container">
        {{#each posts}}
        {{> postTemplate}}
      {{/each}}
      </section>

</main>
